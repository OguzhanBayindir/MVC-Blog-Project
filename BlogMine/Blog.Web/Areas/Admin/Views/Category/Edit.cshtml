@using Blog.Entity.Model
@model Category



@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Category", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div>
        @ViewBag.Mesaj
    </div>
    <fieldset>

        @Html.HiddenFor(model => model.CategoryID)

        <div class="editor-label">
            @Html.LabelFor(model => model.CategoryName)
        </div>

        <div class="editor-field">
            @Html.EditorFor(model => model.CategoryName)
            @Html.ValidationMessageFor(model => model.CategoryName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CategoryDescription)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CategoryDescription)
            @Html.ValidationMessageFor(model => model.CategoryDescription)
        </div>

        <div class="editor-field">
            @Html.HiddenFor(model => model.CategoryPhoto)
            @Html.LabelFor(model=> model.CategoryPhoto)
            <input type="file" name="photo" id="photo" />
            @Html.ValidationMessageFor(model => model.CategoryPhoto)
        </div>


        <p>
            <input type="submit" value="Save" />
        </p>

        @if (ViewBag.result != null)
        {
            <div class="alert alert-@ViewBag.status" role="alert">@ViewBag.result</div>

        }


    </fieldset>
}
