@using Blog.Entity.Model
@model IEnumerable<Post>
 


@{
    ViewBag.Title = "SearchPosts";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<h2>SearchPosts</h2>

@*@Html.Partial("~/Views/Shared/_PartialPageSearchResult.cshtml")*@

<div class="col-md-8">
    <h2>Posts related your search</h2>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostExcerpt)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.User.Username)
            </th>

            <th>@Html.DisplayNameFor(model=>model.Photo)</th>
      
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostDate)
            </td>
            @*<td>
            <a href="/Home/MakaleDetay/@item.MakaleId"> @Html.DisplayFor(modelItem => item.Baslik)</a>
        </td>*@


            <td>
                @Html.DisplayFor(modelItem => item.PostExcerpt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Username)
            </td>

            <td>
                <img class="img-circle img-responsive" width="75" src="~/Upload/@item.Photo" alt="photo" />
            </td>

        </tr>
        }

    </table>
</div>